<odoo>
    <record id="view_website_config_settings" model="ir.ui.view">
        <field name="name">view_website_config_settings</field>
        <field name="model">website.config.settings</field>
        <field name="inherit_id" ref="website_product_subscription.view_website_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='product_subscription_form_header']" position="after">
                <label for="product_subscription_web_access"/>
                <div name="product_subscription_web_access">
                    <div class="oe_inline">
                        <field name="product_subscription_web_access"/>
                    </div>
                </div>
                <label for="temporary_access_length"/>
                <div name="temporary_access_length">
                    <div class="oe_inline">
                        <field name="temporary_access_length"/>
                    </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>
