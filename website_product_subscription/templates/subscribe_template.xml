                required="required">
                <t t-foreach="countries or []" t-as="country">
                    <option
                        t-att-selected="'selected' if country.id == subscriber_country_id else None"
                        t-att-value="country.id">
                        <t t-esc="country.name"/>
                    </option>
                </t>
            </select>
        </div>

    </template>


