<odoo>
    <record id="view_website_config_settings" model="ir.ui.view">
        <field name="name">view_website_config_settings</field>
        <field name="model">website.config.settings</field>
        <field name="inherit_id" ref="website.view_website_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='social']" position="after">
                <group name="product_subscription" string="Product Subscription Configuration">
                    <label for="product_subscription_form_header"/>
                    <div name="product_subscription_form_header">
                        <div class="oe_inline">
                            <field name="product_subscription_form_header"/>
                        </div>
                    </div>
                </group>
            </xpath>

        </field>
    </record>
</odoo>
